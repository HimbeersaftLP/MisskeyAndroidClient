<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="selectedUserViewModel"
                type="jp.panta.misskeyandroidclient.ui.users.viewmodel.selectable.SelectedUserViewModel" />
        <import type="jp.panta.misskeyandroidclient.ui.SafeUnbox" />
    </data>
    <LinearLayout
            android:id="@+id/selectedUsersBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_peekHeight="?attr/actionBarSize"
            app:behavior_hideable="false"

            android:orientation="vertical"
            android:background="?android:attr/windowBackground">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="?attr/colorPrimary"
                tools:ignore="UselessParent"
                android:elevation="4dp">
            <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/ic_person_black_24dp"
                        tools:ignore="ContentDescription"
                        app:tint="?attr/normalIconTint" />
                <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/ic_check_black_24dp"
                        android:layout_gravity="end|top"
                        tools:ignore="ContentDescription"
                        app:tint="?attr/colorAccent" />

            </FrameLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selecting_users"
                    android:textSize="20sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginEnd="4dp"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"(" + String.valueOf(SafeUnbox.unbox(selectedUserViewModel.selectedUsers.size())) + ")"}'
                    android:textSize="20sp"
                    android:textColor="?android:attr/textColorPrimary"
                    />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectedUsersView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </LinearLayout>
</layout>
